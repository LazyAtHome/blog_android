<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/head_portrait_width"
        android:layout_height="@dimen/head_portrait_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/head_portrait" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/long_margin"
        android:layout_marginRight="@dimen/long_margin"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/black_text_common"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:background="@drawable/gray_frame_white_bg"
            android:gravity="center"
            android:padding="@dimen/common_padding"
            android:text="账号" />

        <EditText
            android:id="@+id/edit_login_username"
            style="@style/black_text_common"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/gray_frame_white_bg"
            android:hint="请输入您的用户名"
            android:paddingLeft="@dimen/common_padding"
            android:text="bluesky" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/long_margin"
        android:layout_marginRight="@dimen/long_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="horizontal">

        <TextView
            style="@style/black_text_common"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:background="@drawable/gray_frame_white_bg"
            android:gravity="center"
            android:padding="@dimen/common_padding"
            android:text="密码" />

        <EditText
            android:id="@+id/edit_login_password"
            style="@style/black_text_common"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/gray_frame_white_bg"
            android:hint="请输入您的用户密码"
            android:paddingLeft="@dimen/common_padding"
            android:password="true"
            android:text="lantianTest" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/long_margin"
        android:gravity="right">

        <CheckBox
            android:id="@+id/check_save_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:text="记住密码" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_login_login"
        style="@style/white_text_big"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/long_margin"
        android:layout_marginRight="@dimen/long_margin"
        android:layout_marginTop="@dimen/long_margin"
        android:background="@color/orange"
        android:text="登录" />


</LinearLayout>