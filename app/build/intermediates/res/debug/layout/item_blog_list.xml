<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_frame_just_bottom"
    android:orientation="vertical"
    android:padding="@dimen/common_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/head_portrait" />

        <TextView
            android:id="@+id/text_blog_list_title"
            style="@style/black_text_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@id/img_head_portrait"
            android:text="title" />

        <TextView
            android:id="@+id/text_blog_list_time"
            style="@style/orange_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@+id/text_blog_list_title"
            android:layout_below="@+id/text_blog_list_title"
            android:text="10 minutes ago" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_blog_list_context"
        style="@style/black_text_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3sp"
        android:maxLines="5"
        android:layout_marginLeft="@dimen/common_margin"
        android:text="博客正文" />

    <TextView
        android:id="@+id/text_blog_list_username"
        style="@style/orange_text_small"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="From xxx"
        android:textStyle="bold" />


</LinearLayout><!-- From: file:/F:/code/Blog_Yan/blog_android_lan/blog_android/app/src/main/res/layout/item_blog_list.xml -->