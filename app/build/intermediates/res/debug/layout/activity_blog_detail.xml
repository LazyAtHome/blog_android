<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/common_padding">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_blog_detail_username"
                    style="@style/black_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/text_blog_detail_time"
                    style="@style/black_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_blog_detail_username"
                    android:layout_marginTop="3dp"
                    android:text="2015-09-15 15:00"
                    android:textColor="@color/orange" />

                <ImageButton
                    android:id="@+id/imgbtn_detail_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_margin"
                    android:background="@null"
                    android:src="@drawable/publish_selected" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_blog_detail_title"
                style="@style/black_text_big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:lineSpacingExtra="3sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_blog_detail_content"
                style="@style/black_text_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="3sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/F:/code/Blog_Yan/blog_android_lan/blog_android/app/src/main/res/layout/activity_blog_detail.xml -->