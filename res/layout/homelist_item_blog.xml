<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_blog_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8sp"
    android:paddingLeft="8sp"
    android:background="@android:color/white"
    android:paddingTop="8sp" > 

    <ImageView
        android:id="@+id/iv_blog_list_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6sp"
        android:src="@drawable/icon_home_blog_list_profile" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10sp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_list_blog_title"
                style="@style/list_blog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_loading"
                android:freezesText="true" >
            </TextView>

            

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

       

            <TextView
                android:id="@+id/tv_list_blog_create_time"
                style="@style/list_blog_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_loading" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="2sp" >

            <TextView
                android:id="@+id/tv_list_blog_content"
                style="@style/list_blog_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_loading"
                android:linksClickable="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2sp" >
                
                <TextView
                    android:id="@+id/tv_list_blog_publisher"
                    style="@style/list_blog_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:gravity="left"
                    android:hint="@string/label_loading" />
                
                <TextView
                    
                    style="@style/list_blog_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_list_blog_response"
                    style="@style/list_blog_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="@string/label_loading" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>