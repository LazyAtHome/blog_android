<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginBottom="13.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_crackgame_hot_icon"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="13.0dip"
               
                android:background="@drawable/rank_def" />

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_weight="1.0" >

                <RelativeLayout
                    android:id="@+id/first_line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/rl_crackgame_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true" >

                        <TextView
                            android:id="@+id/tv_blog_detail_creater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:padding="2dip"
                            android:singleLine="true"
                            android:text="time"
                            android:textSize="15.0sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_line"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_blog_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="2dip"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="13.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider1sp"/>
    
    <ScrollView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        >
        
        <LinearLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
            >
            
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="8dip"
                      android:paddingLeft="8dip"
                      android:paddingBottom="2dip"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:id="@+id/tv_blog_detail_title"
                      
                />
            
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="2dip"
                      android:paddingLeft="8dip"
                      android:paddingBottom="8dip"
                      android:textSize="14sp"
                      android:id="@+id/tv_blog_detail_content"
                      
                />
            
        </LinearLayout>
        
    </ScrollView>
    
    
</LinearLayout>