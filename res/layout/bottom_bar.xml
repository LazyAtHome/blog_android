<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_bar"
    android:orientation="horizontal" >

    <LinearLayout style="@style/bottom_tab" >

        <ImageView
            android:id="@+id/iv_bottom_home"
            style="@style/bottom_tab_image"
            android:background="@drawable/bg_main_bottom_home" />
    </LinearLayout>

    <include layout="@layout/bottom_devider" />

    <LinearLayout style="@style/bottom_tab" >

        <ImageView
            
             android:id="@+id/iv_bottom_edit"
            style="@style/bottom_tab_image"
            android:background="@drawable/bg_main_bottom_edit" />
    </LinearLayout>

    <include layout="@layout/bottom_devider" />

    <LinearLayout style="@style/bottom_tab" >

        <ImageView
             android:id="@+id/iv_bottom_more"
            style="@style/bottom_tab_image"
            android:background="@drawable/bg_main_bottom_more" />
    </LinearLayout>

</LinearLayout>