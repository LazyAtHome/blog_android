<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- modified by Tiny.Lan -->
    <style name="title_text">
        <item name="android:textColor">@color/gray_text_dark</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="title_left_text">
        <item name="android:textColor">@color/gray_text_common</item>
        <item name="android:textSize">@dimen/title_left_right_text_size</item>
    </style>

    <style name="title_right_text">
        <item name="android:textColor">@color/gray_text_common</item>
        <item name="android:textSize">@dimen/title_left_right_text_size</item>
    </style>

    <style name="black_text_big">
        <item name="android:textColor">@color/common_text_black</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="black_text_common">
        <item name="android:textColor">@color/common_text_black</item>
        <item name="android:textSize">@dimen/text_common</item>
    </style>

    <style name="black_text_small">
        <item name="android:textColor">@color/common_text_black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="orange_text_big">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="edit_text_common">
        <item name="android:textColorHint">@color/gray_text_common</item>
        <item name="android:textColor">@color/common_text_black</item>
        <item name="android:textSize">@dimen/text_common</item>
    </style>


</resources>
